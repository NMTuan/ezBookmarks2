{
    "manifest_version": 3,
    "name": "简单书签2",
    "version": "2.0.0",
    "description": "无压的浏览器书签管理插件",
    "author": "NMTuan",
    "homepage_url": "https://github.com/NMTuan/ezBookmarks2",

    "action": { "default_popup": "popup.html" },
    "options_page": "options.html",
    "background": {
        "service_worker": "src/background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                "/src/content/content.js",
                "/src/content/webcomponents-bundle.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["pages/dialog.html"],
            "matches": ["<all_urls>"]
        }
    ]
}
